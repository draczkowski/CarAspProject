@using caraspproject.Data.Model
@model IEnumerable<Car>

<a class="btn btn-success mt-5" style="margin: 10px" asp-controller="Car" asp-action="Create">Dodaj nowe auto</a>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nazwa</th>
            <th>Marka</th>
            <th>Moc</th>
            <th>Rocznik</th>
            <th>Ilość miejsc</th>
            <th>Kolor</th>
            <th>Edytuj</th>
            <th>Usuń</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Car car in Model)
        { 
        <tr>
            <td>@car.CarId</td>
            <td>@car.CarName</td>
            <td>@car.Brand.Name</td>
            <td>@car.CarPower</td>
            <td>@car.CarAge</td>
            <td>@car.CarSeats</td>
            <td>@car.CarColor</td>
            <td><a class="btn btn-info" asp-area="" asp-controller="Car" asp-action="Update" asp-route-id="@car.CarId">Edytuj</a></td>
            <td><a class="btn btn-danger" asp-area="" asp-controller="Car" asp-action="Delete" asp-route-id="@car.CarId" asp-route-brandId="@ViewBag.BrandId">Usuń</a></td>
        </tr>
        }
    </tbody>
</table>