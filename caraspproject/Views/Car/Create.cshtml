@using caraspproject.ViewModel;

@model CarViewModel

<div class="row orderForm">
    <form asp-controller="Car" asp-action="Create" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-offset-2">Dodaj nowe auto</h3>
        <div class="form-group">
            <label asp-for="Car.Brand" class="col-md-2 control-label">Marka</label>
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.Car.BrandId,
                                      new SelectList(Model.Brands.Select(x => new { Value = x.BrandId, Text = x.Name }), "Value", "Text"), "Wybierz markę",
                                      htmlAttributes: new { @class = "form-control border-input" })
                <span asp-validation-for="Car.Brand" class="text-danger"></span>
            </div>

            <div class="col-md-2">
                <a class="btn btn-success" style="width:100%" asp-controller="Brand" asp-action="Create">Dodaj markę</a>
            </div>

        </div>
        <div class="form-group">
            <label asp-for="Car.CarName" class="col-md-2 control-label">Nazwa</label>
            <div class="col-md-6">
                <input asp-for="Car.CarName" class="form-control" />
                <span asp-validation-for="Car.CarName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Car.CarPower" class="col-md-2 control-label">Moc</label>
            <div class="col-md-6">
                <input asp-for="Car.CarPower" class="form-control" />
                <span asp-validation-for="Car.CarPower" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Car.CarAge" class="col-md-2 control-label">Rocznik</label>
            <div class="col-md-6">
                <input asp-for="Car.CarAge" class="form-control" />
                <span asp-validation-for="Car.CarAge" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Car.CarSeats" class="col-md-2 control-label">Ilość miejsc</label>
            <div class="col-md-6">
                <input asp-for="Car.CarSeats" class="form-control" />
                <span asp-validation-for="Car.CarSeats" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Car.CarColor" class="col-md-2 control-label">Kolor</label>
            <div class="col-md-6">
                <input asp-for="Car.CarColor" class="form-control" />
                <span asp-validation-for="Car.CarColor" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Anuluj" asp-controller="Car" asp-action="List" />
                <input class="btn btn-success" type="submit" value="Dodaj" />
            </div>
        </div>
    </form>
</div>