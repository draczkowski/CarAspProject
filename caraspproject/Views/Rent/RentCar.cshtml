@using caraspproject.ViewModel;
@model RentViewModel
<div class="row orderForm">
    <form asp-controller="Rent" asp-action="RentCar" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-offset-2">Wynajmij @Model.Car.CarName</h3>
        @Html.HiddenFor(m => Model.Car.CarId)
        <div class="form-group">
            <label asp-for="Car.Customer" class="col-md-2 control-label">Klient</label>
            <div class="col-md-6">

                @Html.DropDownListFor(m => m.Car.CustomerId,
                                             new SelectList(Model.Clients.Select(x => new { Value = x.ClientId, Text = x.Name }), "Value", "Text"),
                                             "Wybierz klienta",
                                             htmlAttributes: new { @class = "form-control border-input" })
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Anuluj" asp-controller="Rent" asp-action="List" />
                <input class="btn btn-success" type="submit" value="Wynajmij" />
            </div>
        </div>
    </form>
</div>