@using caraspproject.Data.Model;
@model IEnumerable<Car>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nazwa</th>
            <th>Marka</th>
            <th>Moc</th>
            <th>Rocznik</th>
            <th>Ilość miejsc</th>
            <th>Kolor</th>
            <th>Wynajmij</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Car car in Model)
        {
        <tr>
            <td>@car.CarId</td>
            <td>@car.CarName</td>
            <td>@car.Brand.Name</td>
            <td>@car.CarPower</td>
            <td>@car.CarAge</td>
            <td>@car.CarSeats</td>
            <td>@car.CarColor</td>
            <td><a class="btn btn-success" asp-area="" asp-controller="Rent" asp-action="RentCar" asp-route-carId="@car.CarId">Wynajmij</a></td>
        </tr>
        }
    </tbody>
</table>
